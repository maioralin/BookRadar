<body>
    <div class="inverse navbar">
        <div class="container">
            <div class="navbar-inner">
                <div class="navbar-header">
                    <a href="index.html" class="navbar-logo">BookRadar</a>
                    <button aria-label="navbutton" class="navbar-nav-toggle">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
